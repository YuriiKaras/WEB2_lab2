extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='project-add-form' name='project-add-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Name
      div(class='col-md-9')
        input(id='name' name='name' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='number') Number
      div(class='col-md-9')
        input(id='number' name='number' type='number' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='description') Description
      div(class='col-md-9')
        input(id='description' name='description' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='min_exec_exp') Min experience
      div(class='col-md-9')
        input(id='min_exec_exp' name='min_exec_exp' type='number' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='customer') Customer
      div(class='col-md-9')
        select(id='customer' name='customer' class='form-control' required='required')
          option(value='' selected='selected') Select customer
    
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create
    div.list-wrapper
      table(id='project-list')
block append scripts
  script(src='/static/js/models/customer.js')
  script(src='/static/js/models/project.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/project.js')