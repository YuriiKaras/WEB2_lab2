extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='executor-add-form' name='executor-add-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='name') Name
      div(class='col-md-9')
        input(id='name' name='name' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='code') Code
      div(class='col-md-9')
        input(id='code' name='code' type='number' value='' class='form-control' required='required')
     
    div(class='form-group')
      div(class='col-md-3')
        label(for='experience') Experience
      div(class='col-md-9')
        input(id='experience' name='experience' type='number' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-3')
        label(for='workers_ammount') Workers
      div(class='col-md-9')
        input(id='workers_ammount' name='workers_ammount' type='number' value='' class='form-control' required='required')
    
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create
    div.list-wrapper
      table(id='executor-list')
block append scripts
  script(src='/static/js/models/executor.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/executor.js')
