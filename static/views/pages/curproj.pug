extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='curproj-add-form' name='curproj-add-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='project') Project
      div(class='col-md-9')
        select(id='project' name='project' class='form-control' required='required')
          option(value='' selected='selected') Select project
    div(class='form-group')
      div(class='col-md-3')
        label(for='executor') Executor
      div(class='col-md-9')
        select(id='executor' name='executor' class='form-control' required='required')
          option(value='' selected='selected') Select executor
    div(class='form-group')
      div(class='col-md-3')
        label(for='begintime') Begin time
      div(class='col-md-9')
        input(id='begintime' name='begintime' type='date' value='' class='form-control' required='required')
    div(class='form-group')
      div(class='col-md-3')
        label(for='endtime') End time
      div(class='col-md-9')
        input(id='endtime' name='endtime' type='date' value='' class='form-control' required='required')
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create
    div.list-wrapper
      table(id='curproj-list')
block append scripts
  script(src='/static/js/models/project.js')
  script(src='/static/js/models/executor.js')
  script(src='/static/js/models/curproj.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/curproj.js')
